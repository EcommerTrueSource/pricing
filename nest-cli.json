{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "tsconfig.json",
    "assets": [
      {
        "include": "**/*.json",
        "outDir": "dist/src"
      },
      {
        "include": "modules/contract-management/template/templates/**/*",
        "outDir": "dist/src",
        "watchAssets": true
      }
    ]
  }
}
